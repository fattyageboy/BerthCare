{
  "name": "mobile",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/mobile/src",
  "projectType": "application",
  "tags": ["type:app", "platform:mobile"],
  "targets": {
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "expo start",
        "cwd": "apps/mobile"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "echo 'TODO [2025-05-01]: Implement mobile build pipeline. Failing to avoid false-positive CI.' && exit 1",
        "cwd": "apps/mobile"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "apps/mobile/**/*.ts",
          "apps/mobile/**/*.tsx",
          "apps/mobile/**/*.js",
          "apps/mobile/**/*.jsx"
        ]
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "jest --passWithNoTests",
        "cwd": "apps/mobile"
      }
    }
  },
  "ciChecklist": [
    "TODO[lint-mobile]: Once apps/mobile/src contains real source files, restore/verify the ESLint setup for this project and remove this reminder."
  ]
}
