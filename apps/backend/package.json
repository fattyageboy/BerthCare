{
  "name": "@berthcare/backend",
  "version": "1.0.0",
  "description": "BerthCare Backend API - Express.js REST API with TypeScript",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "dev": "NODE_ENV=development tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "test": "jest",
    "test:redis": "node scripts/test-redis.js",
    "test:database": "node scripts/test-database.js",
    "test:s3": "node scripts/test-s3.js",
    "test:health": "./scripts/test-health.sh",
    "type-check": "tsc --noEmit",
    "migrate:up": "./scripts/run-migrations.sh",
    "migrate:down": "node-pg-migrate down",
    "migrate:create": "node-pg-migrate create"
  },
  "dependencies": {
    "@aws-sdk/client-cloudwatch": "^3.478.0",
    "@aws-sdk/client-s3": "^3.901.0",
    "@aws-sdk/s3-request-presigner": "^3.901.0",
    "@sentry/node": "^7.91.0",
    "@sentry/profiling-node": "^1.3.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.8.1",
    "node-pg-migrate": "^7.9.1",
    "pg": "^8.16.3",
    "uuid": "^9.0.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^9.0.7",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
