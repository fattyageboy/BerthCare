# BerthCare Staging Environment Configuration
# Copy this file to terraform.tfvars and update with your values

# AWS Configuration
aws_region  = "ca-central-1"
environment = "staging"

# Networking
vpc_cidr              = "10.0.0.0/16"
public_subnet_cidrs   = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs  = ["10.0.11.0/24", "10.0.12.0/24"]
database_subnet_cidrs = ["10.0.21.0/24", "10.0.22.0/24"]

# Database (RDS PostgreSQL)
db_instance_class          = "db.t4g.medium"
db_allocated_storage       = 100
db_max_allocated_storage   = 500
db_engine_version          = "15.5"
db_name                    = "berthcare_staging"
db_master_username         = "berthcare_admin"
db_multi_az                = true
db_backup_retention_period = 7
db_deletion_protection     = true

# Cache (ElastiCache Redis)
redis_node_type              = "cache.t4g.micro"
redis_num_cache_nodes        = 2
redis_engine_version         = "7.1"
redis_parameter_group_family = "redis7"
redis_automatic_failover     = true

# Storage (S3)
photos_bucket_name       = "berthcare-photos-staging-ca-central-1"
documents_bucket_name    = "berthcare-documents-staging-ca-central-1"
s3_enable_versioning     = true
s3_lifecycle_glacier_days = 365

# CDN (CloudFront)
cloudfront_price_class       = "PriceClass_100"
cloudfront_enable_compression = true

# Tags
tags = {
  Project     = "BerthCare"
  Environment = "staging"
  ManagedBy   = "Terraform"
  Compliance  = "PIPEDA"
  Team        = "DevOps"
  CostCenter  = "Engineering"
}

# Monitoring
log_retention_days       = 30
error_log_retention_days = 90
db_max_connections       = 100
create_alarm_sns_topic   = true
alarm_email              = "devops@berthcare.ca"

# =============================================================================
# Twilio Configuration
# =============================================================================
# IMPORTANT: Never commit actual credentials to version control!
# Set these values in terraform.tfvars (which is gitignored)

# Twilio Account Credentials
# Get these from: https://console.twilio.com/
twilio_account_sid  = "ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"  # Replace with your Account SID
twilio_auth_token   = "xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"    # Replace with your Auth Token

# Twilio Phone Numbers (E.164 format: +1XXXXXXXXXX)
# Purchase from: https://console.twilio.com/phone-numbers
twilio_voice_number = "+1XXXXXXXXXX"  # Canadian number for voice calls
twilio_sms_number   = "+1XXXXXXXXXX"  # Canadian number for SMS (can be same as voice)

# Webhook URLs (update after backend deployment)
voice_webhook_url         = "https://api-staging.berthcare.ca/v1/voice/webhook"
voice_status_callback_url = "https://api-staging.berthcare.ca/v1/voice/status"
sms_webhook_url           = "https://api-staging.berthcare.ca/v1/sms/webhook"
sms_status_callback_url   = "https://api-staging.berthcare.ca/v1/sms/status"

# Webhook Authentication Token (generate a random 32-character string)
# Generate with: openssl rand -hex 16
webhook_auth_token = "generate_random_32_char_string_here"

# Secrets Management
secrets_recovery_window_days = 7
